# WizardWarriors Environment Configuration
# Copy this file to .env and customize for your local development

# Database Configuration
# For local development, use localhost instead of 'db'
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wizardwarriors

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Server Configuration (optional, can also pass as CLI args)
# ADDR=:8080
# DEBUG=true
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
# Log level: error, warn, info, debug
# - error: Only critical errors
# - warn: Warnings and errors
# - info: Important events (connections, chat, announcements) + warn/error
# - debug: Everything including high-frequency events (player_input, game_state)
LOG_LEVEL=info
